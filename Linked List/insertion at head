#include <iostream>
using namespace std;

class Node{
    public:
        int data;
        Node *next;

    //constructor
        Node(int d){
            data = d;
            next = NULL;
        }
};

//passing a pointer by reference 
//if passes by value thn only copied value will be changed not original 
void insertAtHead(Node *&head, int d){
    if(head == NULL){
        head = new Node(d);
        return;
    }
    Node *n = new Node(d);
    n->next = head;
    head= n;
}

void print(Node *head){
    while(head != NULL){
        cout<<head->data<<" -> ";
        head = head->next;
    }
}

int main(){
    Node *head = NULL;
    insertAtHead(head, 3);
    insertAtHead(head, 4);
    insertAtHead(head, 1);
    insertAtHead(head, 10);
    insertAtHead(head, 9);
    print(head);
    return 0;
}
/*
Output
9 -> 10 -> 1 -> 4 -> 3 -> 
*/
